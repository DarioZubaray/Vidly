@model Vidly.Models.Genre
@{
    ViewBag.Title = "CreateGenre";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Create Genre</h2>

@using (Html.BeginForm("SaveGenre", "Movies"))
{
    <div class="form-group">
        @Html.LabelFor(g => g.Name)
        @Html.TextBoxFor(g => g.Name, new { @class = "form-control" })
    </div>

    @Html.ActionLink("Back to list", "Index", "Movies", null, new { @class = "btn btn-secondary" })
    <button type="submit" class="btn btn-primary">Save</button>

}
